@model IssueTracker.Models.ViewModels.ProjectMembersViewModel

@{
    ViewBag.Title = "Project Memebers";
    Layout = "_Layout";
}



<div class="container">
    <h2>Project Memebers</h2>
    <div class="row">
        <div class="col-md-6">
            <h3>@Model.Project.Name</h3>
            <div class="card">
                <div class="card-header">
                    <label asp-for="@Model.Users" class="control-label">Assign team members for Project</label>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="AssignMembers" asp-controller="Project" >
                        <input hidden asp-for="Project.Id"/>
                        <div class="col-12 mb-3">
                            <div class="form-group">
                                <select required asp-for="@Model.SelectedUsers" class="form-control" asp-items="@Model.Users" multiple="multiple"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <input type="submit" class="btn alert-primary" value="Assign Users"/>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Details" asp-controller="Project" asp-route-id="@Model.Project.Id">Back to Details</a>
    </div>
</div>
