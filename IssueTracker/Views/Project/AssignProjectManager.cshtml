@model IssueTracker.Models.ViewModels.AssignProjectManagerViewModel

@{
    ViewBag.Title = "Assign Project Manager";
    Layout = "_Layout";
}
<h1>Project: @Model.Project.Name</h1>
<h4>Assign Project Manager</h4>

<hr/>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="AssignProjectManager" asp-controller="Project">
            <input hidden asp-for="Project.Id"/>
            
            <h2>@Model.Project.Name</h2>
            <p>@Model.Project.Description</p>
            
            <div class="form-group">
                <label class="control-label">Select Project Manager</label>
                <select asp-for="ProjectManagerId" class="form-control" asp-items="@Model.ProjectManagerList">
                    <option></option>
                </select>
                
                <input type="submit" value="Assign" class="btn btn-primary"/>
            </div>

        </form>        
    </div>
</div>

<div>
    <a asp-action="UnassignedProjects">Back to List</a>
</div>
