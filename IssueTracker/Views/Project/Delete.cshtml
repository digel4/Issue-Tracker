@model Project

<div class="pagetitle">
    <h1>Delete Project</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Projects</li>
            <li class="breadcrumb-item">Active</li>
            <li class="breadcrumb-item active">Delete</li>
        </ol>
    </nav>
</div>

<div class="col col-lg-6">
    <div class="card">
        <div class="card-header card-title ms-3"><strong>Project: </strong>@Model.Name</div>
        <div class="card-body">
            <form asp-controller="Project" asp-action="DeleteConfirmed" method="post" class="mt-2">
                <input type="hidden" asp-for="Id" />
                <p>Are you sure you want to delete this project? This can't be undone. Consider archiving the project instead.</p>

                <button type="submit" class="btn btn-danger">Confirm</button>
                <a class="btn btn-outline-secondary" asp-controller="Project" asp-action="Details" asp-route-projectId="@Model.Id">Cancel</a>
            </form>
        </div>
    </div>
</div>